{
    "helpUrl": "https://github.com/MontpellierRessourcesImagerie/point-pattern-analysis/wiki/3D_Synthetic_Spots", 
    "title": "Simulate Microscope Options", 
    "elements": {
        "read_noise": {
            "helpText": "The std-dev of the Gaussian camera readout-noise", 
            "defaultValue": 1.0, 
            "label": "read_noise stddev", 
            "type": "float", 
            "value": 1.0, 
            "key": "read_noise", 
            "order": 7
        }, 
        "offset": {
            "helpText": "The detector offset", 
            "defaultValue": 100, 
            "label": "offset of the detector", 
            "type": "int", 
            "value": 100, 
            "key": "offset", 
            "order": 9
        }, 
        "binning": {
            "helpText": "The binning allows to groups pixels, to detect more photons with the cost of lower resolution", 
            "defaultValue": 1, 
            "label": "binning", 
            "type": "int", 
            "value": 1, 
            "key": "binning", 
            "order": 12
        }, 
        "max._photon": {
            "helpText": "The maximal number of emitted photons", 
            "defaultValue": 25, 
            "label": "max._photon emission", 
            "type": "int", 
            "value": 25, 
            "key": "max._photon", 
            "order": 11
        }, 
        "bit": {
            "helpText": "The bit-depth of the camera, usually (8, 12 or 16 bit)", 
            "defaultValue": 16, 
            "label": "bit depth", 
            "type": "choice", 
            "choices": [
                "8-bit", 
                "12-bit", 
                "16-bit", 
                "32-bit"
            ], 
            "value": "16-bit", 
            "key": "bit", 
            "order": 10
        }, 
        "gain": {
            "helpText": "The detector gain", 
            "defaultValue": 1.0, 
            "label": "gain of the detector", 
            "type": "float", 
            "value": 1.0, 
            "key": "gain", 
            "order": 8
        }, 
        "exposure": {
            "helpText": "The exposure time", 
            "defaultValue": 10, 
            "label": "exposure time", 
            "type": "int", 
            "value": 10, 
            "key": "exposure", 
            "order": 6
        }, 
        "background": {
            "helpText": "Amount of background intensity", 
            "defaultValue": 10, 
            "label": "background photons", 
            "type": "int", 
            "value": 10, 
            "key": "background", 
            "order": 3
        }, 
        "sigma_z": {
            "helpText": "Sigma of the gaussian psf in the z-dimension", 
            "defaultValue": 1.3, 
            "label": "sigma_z of psf", 
            "type": "float", 
            "value": 1.3, 
            "key": "sigma_z", 
            "order": 2
        }, 
        "gradient_xy": {
            "helpText": "Gradient of the background intensity in the xy-plane. Zero means no gradient", 
            "defaultValue": 0.01, 
            "label": "gradient_xy", 
            "type": "float", 
            "value": 0.01, 
            "key": "gradient_xy", 
            "order": 4
        }, 
        "sigma_xy": {
            "helpText": "Sigma of the gaussian psf in the xy-plane", 
            "defaultValue": 1.0, 
            "label": "sigma_xy of psf", 
            "type": "float", 
            "value": 1.0, 
            "key": "sigma_xy", 
            "order": 1
        }, 
        "gradient_z": {
            "helpText": "Std-dev of the Gaussian, defining the background gradient along the z-axis. Zero means no gradient", 
            "defaultValue": 40, 
            "label": "gradient_z stddev", 
            "type": "float", 
            "value": 160.0, 
            "key": "gradient_z", 
            "order": 5
        }
    }
}